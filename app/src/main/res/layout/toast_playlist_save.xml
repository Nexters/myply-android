<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_80"
        android:padding="16dp">

        <ImageView
            android:id="@+id/toast_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_like_active"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/toast_text"
            style="@style/Body2_Semibold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="@string/playlist_save"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_move_to_keep_write"
            app:layout_constraintStart_toEndOf="@id/toast_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_move_to_keep_write"
            style="@style/Body2_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playlist_write_memo"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/toast_text"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>