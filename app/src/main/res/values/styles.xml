<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Design System Typography  -->
    <!--  H1  -->
    <style name="H1_Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="H1_Semibold">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="H1_Medium">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--  H2  -->
    <style name="H2_Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="H2_Semibold">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="H2_Medium">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--  H3  -->
    <style name="H3_Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="H3_Semibold">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="H3_Medium">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--  Body1  -->
    <style name="Body1_Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body1_Semibold">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body1_Medium">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--  Body2  -->
    <style name="Body2_Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body2_Semibold">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body2_Medium">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--  Caption  -->
    <style name="Caption_Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Caption_Semibold">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Caption_Medium">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--  Custom Style  -->

    <!--  Chip Button  -->
    <style name="MyPly.Chip.Home" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="chipCornerRadius">0dp</item>
        <item name="android:textAppearance">@style/Body2_Bold</item>
        <item name="android:textColor">@color/text_home_chip</item>
        <item name="chipBackgroundColor">@color/bg_home_chip</item>
        <item name="chipStrokeColor">@color/bg_home_chip</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>

    <!--  Divider Style  -->
    <style name="Divider">
        <item name="android:background">@color/gray_50</item>
        <item name="android:alpha">0.3</item>
    </style>

    <!-- BottomSheet Style -->
    <style name="MyPly.BottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MyPly.BottomSheet.Modal</item>
    </style>

    <style name="MyPly.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/beige</item>
        <item name="shapeAppearance">@style/MyPly.LargeComponent</item>>
    </style>

    <style name="MyPly.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="MyPly.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipCornerRadius">0dp</item>
        <item name="android:textAppearance">@style/Body2_Bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <!-- Keep Cheep Style -->
    <style name="MyPly.Chip.Keep" parent="MyPly.Chip">
        <item name="chipBackgroundColor">@color/secondary_brown</item>
        <item name="chipStrokeColor">@color/secondary_brown</item>
    </style>

    <style name="MyPly.Chip.Red" parent="MyPly.Chip">
        <item name="chipBackgroundColor">@color/secondary_red</item>
        <item name="chipStrokeColor">@color/secondary_red</item>
    </style>

    <style name="MyPly.Chip.Blue" parent="MyPly.Chip">
        <item name="chipBackgroundColor">@color/secondary_blue</item>
        <item name="chipStrokeColor">@color/secondary_blue</item>
    </style>

    <style name="MyPly.Chip.yellow" parent="MyPly.Chip">
        <item name="chipBackgroundColor">@color/secondary_yellow</item>
        <item name="chipStrokeColor">@color/secondary_yellow</item>
    </style>

    <style name="MyPly.Chip.green" parent="MyPly.Chip">
        <item name="chipBackgroundColor">@color/primary_green_light</item>
        <item name="chipStrokeColor">@color/primary_green_light</item>
    </style>

</resources>
